pkgname=nodejs
pkgver=19.0.0
pkgrel=2
pkgdesc='Evented I/O for V8 javascript'
arch=('loong64' 'x86_64')
url='https://nodejs.org/'
license=('MIT')
options=(!lto)
depends=('brotli' 'openssl' 'zlib' 'icu' 'libuv' 'libnghttp2' 'c-ares') # 'http-parser' 'v8')
makedepends=('python' 'procps-ng')
optdepends=('npm: nodejs package manager')
source=("https://github.com/nodejs/node/archive/v$pkgver/nodejs-$pkgver.tar.gz"
    8a465a2e3c9282a77f4d6894b0b47ae1b5f9b6ea.patch)
sha512sums=('a8e36677aab7dcd4fe92e327bfad2912254c1624adfef8120e1d143762a769ae92db6e1dd28ef1853bb552262bc4aac2b5ac2440f4790781e0719b1d84b39412'
            '812555fe180723a14e9f5b29df6630bf2cd2272cdb5582b847362e4ed5b8c367ae93883a324fb13eb46d8fad521c9a658962467d12e745c4ca20ca45ac9e2cd5')

prepare() {
  cd node-$pkgver
  patch -p1 -i $srcdir/8a465a2e3c9282a77f4d6894b0b47ae1b5f9b6ea.patch
}

build() {
  cd node-$pkgver

  ./configure \
    --prefix=/usr \
    --with-intl=system-icu \
    --without-npm \
    --shared \
    --shared-openssl \
    --shared-zlib \
    --shared-libuv \
    --experimental-http-parser \
    --shared-nghttp2 \
    --shared-cares \
    --shared-brotli
    # --shared-v8
    # --shared-http-parser

  make
}

check() {
  cd node-$pkgver
  make test || :
}

package() {
  cd node-$pkgver

  make DESTDIR="$pkgdir" install

  install -D -m644 LICENSE \
    "$pkgdir"/usr/share/licenses/nodejs/LICENSE

  cd "$pkgdir"/usr/lib
  ln -s libnode.so.* libnode.so
}

# vim:set ts=2 sw=2 et:
